{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist-electron",
    "rootDir": "electron",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "noEmit": false
  },
  "include": ["electron/**/*.ts"]
}